<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
</head>
<body style="background-color: #00DBDE; background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%); ">
    <div style="background-color:  black" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                 @Html.ActionLink("Facturación", "Index", "Inicio", new { area = "" }, new { @class = "navbar-brand" })
</div>
            <div class="navbar-collapse collapse">
                <ul  class="nav navbar-nav">
                    <li>@Html.ActionLink("Lista de Facturas", "Index", "Inicio")</li>
                    <li>@Html.ActionLink("Facturar", "Facturar", "Factura")</li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:black">&copy; @DateTime.Now.Year - Universidad Técnica de Ambato - Dario Tixi</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
